<div class="container px-5 px-sm-0">
  <div class="row">  
     <%= render 'sidebar', book: @book %>
    
   <div class="col-md-8 offset-md-1">  
    <h1>Book Detail</h1>
      <table>
        <tbody>
         <tr>
           <td><%= image_tag @book.user.get_profile_image(80,80) %>
               <br><%= @book.user.name %>
           </td>
           <td><%= @book.title %></td>
           <td><%= @book.body %></td>
         </tr>
        </tbody>
       </table>
   </div>
  </div>
</div>