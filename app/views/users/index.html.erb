<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
     <%= render 'userinfo', user: @user %>
     <%= render 'books/sidebar', book: @booknew %>
   </div>

   <div class="col-md-8 offset-md-1">
    <h1>Users</h1>
      <table>
        <thead>
         <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
         </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
         <tr>
           <td><%= image_tag user.get_profile_image(80,80) %></td>
           <td><%= user.name %></td>
           <td><%=link_to user_path(user.id) do %>
                 show
               <% end %>
           </td>
         </tr>
        </tbody>
        <% end %>
      </table>
   </div>
  </div>
</div>

